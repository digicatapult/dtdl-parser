{
  "$schema": "https://swc.rs/schema.json",
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true,
      "topLevelAwait": true,
      "importMeta": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true,
      "useDefineForClassFields": true
    },
    "minify": {
      "compress": {
        "unused": true
      },
      "mangle": true
    },
    "target": "ES2022",
    "experimental": {
      "keepImportAttributes": true
    }
  },
  "exclude": [
    "__tests__",
    "interop"
  ],
  "sourceMaps": true,
  "isModule": true
}
